<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#611c6d"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal"
        android:background="#313131">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.25">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#565656"
            android:id="@+id/relativeLayout">

            <ToggleButton
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:text=">"
                android:textSize="15sp"
                android:id="@+id/toggleButton"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:textColor="#272727" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="Cotation préférés"
                android:textSize="15sp"
                android:textColor="#272727"
                android:gravity="center_vertical"
                android:id="@+id/textView5"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/toggleButton"
                android:layout_toEndOf="@+id/toggleButton" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayout"
            android:background="#313131">

            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:id="@+id/frameLayout2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Nom Societe"
                    android:textSize="12sp"
                    android:id="@+id/textView6"
                    android:layout_gravity="center_horizontal|top"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="up 35564.2"
                    android:textSize="10sp"
                    android:id="@+id/textView7"
                    android:layout_gravity="center"
                    android:textColor="#e11919" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1.21%"
                    android:textSize="8sp"
                    android:id="@+id/textView8"
                    android:layout_gravity="left|bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+12.1%"
                    android:textSize="8sp"
                    android:id="@+id/textView9"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#ffffff" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/frameLayout"
                android:layout_alignTop="@+id/frameLayout2"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Nom Societe"
                    android:textSize="12sp"
                    android:id="@+id/textView"
                    android:layout_gravity="center_horizontal|top"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="up 35564.2"
                    android:textSize="10sp"
                    android:id="@+id/textView2"
                    android:layout_gravity="center"
                    android:textColor="#e11919" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1.21%"
                    android:textSize="8sp"
                    android:id="@+id/textView3"
                    android:layout_gravity="left|bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+12.1%"
                    android:textSize="8sp"
                    android:id="@+id/textView4"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#ffffff" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="26dp"
                android:layout_marginEnd="26dp"
                android:layout_alignTop="@+id/frameLayout"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Nom Societe"
                    android:textSize="12sp"
                    android:id="@+id/textView11"
                    android:layout_gravity="center_horizontal|top"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="up 35564.2"
                    android:textSize="10sp"
                    android:id="@+id/textView12"
                    android:layout_gravity="center"
                    android:textColor="#e11919" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1.21%"
                    android:textSize="8sp"
                    android:id="@+id/textView13"
                    android:layout_gravity="left|bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+12.1%"
                    android:textSize="8sp"
                    android:id="@+id/textView14"
                    android:layout_gravity="right|bottom"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="#ffffff" />
            </FrameLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:layout_weight="1.34">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#565656"
            android:id="@+id/relativeLayout2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <ToggleButton
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:text=">"
                android:textSize="15sp"
                android:id="@+id/toggleButton2"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="19dp"
                android:layout_marginStart="19dp"
                android:textColor="#272727" />

            <TextView
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="Marche"
                android:textSize="15sp"
                android:textColor="#272727"
                android:gravity="center_vertical"
                android:id="@+id/textView10"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/toggleButton2"
                android:layout_toEndOf="@+id/toggleButton2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#313131"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/relativeLayout2">

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/listView_cotation"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>